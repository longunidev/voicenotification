<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unitechstudio.voicenotification.activities.main.WelcomeActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logo_welcome"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/logo_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome!"
        android:textColor="@color/welcome_text_color"
        android:textSize="50sp"/>

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/welcome_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/app_name_launcher"
        android:textColor="@color/welcome_text_color"
        android:textSize="25sp"/>
</RelativeLayout>
